{
	"name": "txray",
	"version": "1.0.0",
	"description": "X-ray for EVM transactions. Debug and decode transaction traces from any supported chain.",
	"author": "Alexander Kolberg",
	"license": "MIT",
	"type": "module",
	"keywords": [
		"ethereum",
		"evm",
		"transaction",
		"debugger",
		"decoder",
		"trace",
		"blockchain",
		"web3",
		"solidity"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexanderKolberg/txray.git"
	},
	"homepage": "https://github.com/AlexanderKolberg/txray#readme",
	"bugs": {
		"url": "https://github.com/AlexanderKolberg/txray/issues"
	},
	"bin": {
		"txray": "./src/cli.ts"
	},
	"files": [
		"src",
		"abi",
		"decoders",
		"labels.json"
	],
	"scripts": {
		"start": "bun src/cli.ts",
		"typecheck": "bun x tsc --noEmit",
		"lint": "oxlint --deny-warnings && biome check .",
		"lint:fix": "oxlint --fix && biome check --write .",
		"format": "biome format --write .",
		"check": "bun run typecheck && bun run lint",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"prepublishOnly": "bun run check && bun test",
		"build": "bun build src/cli.ts --compile --outfile=dist/txray",
		"build:linux-x64": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile=dist/txray-linux-x64",
		"build:linux-arm64": "bun build src/cli.ts --compile --target=bun-linux-arm64 --outfile=dist/txray-linux-arm64",
		"build:darwin-x64": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile=dist/txray-darwin-x64",
		"build:darwin-arm64": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile=dist/txray-darwin-arm64",
		"build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-x64 && bun run build:darwin-arm64"
	},
	"engines": {
		"node": ">=18",
		"bun": ">=1.0"
	},
	"dependencies": {
		"@0xsequence/network": "^2.3.39",
		"ora": "^9.1.0",
		"picocolors": "^1.1.1",
		"viem": "^2.36.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/bun": "^1.2.17",
		"oxlint": "^1.42.0"
	}
}
